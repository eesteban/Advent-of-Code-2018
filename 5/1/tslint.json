{
  "extends": "tslint:latest",
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/dist/**",
      "**/docs/**"
    ]
  },
  "rules": {
    "arrow-return-shorthand": true,
    "await-promise": true,
    "no-reference": true,
    "no-return-await": true,
    "no-trailing-whitespace": true,
    "no-submodule-imports": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "only-arrow-functions": true,
    "trailing-comma": true,
    "semicolon": true,
    "no-console": [
      true,
      "log",
      "debug"
    ],
    "no-implicit-dependencies": [
      true,
    ],
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ]
  },
  "jsRules": {
    "quotemark": [
      true,
      "single"
    ]
  }
}